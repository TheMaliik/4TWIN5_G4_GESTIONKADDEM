version: "3.8"

services:
  mysqldb:
    image: mysql:5.7
    container_name: mysql   # Set the container name here
    restart: unless-stopped
    environment:
      - MYSQL_ALLOW_EMPTY_PASSWORD='yes'
      - MYSQL_DATABASE=kaddem
    ports:
      - "3306:3306"
    volumes:
      - db:/var/lib/mysql

  kaddem-app:
    depends_on:
      - mysqldb
    image: ahmedbenhmida/kaddem-app:1.0.0
    restart: on-failure
    ports:
      - "8089:8089"
    environment:
      SPRING_DATASOURCE_URL: jdbc:mysql://mysql:3306/kaddemdb?createDatabaseIfNotExist=true
      SPRING_DATASOURCE_USERNAME: root
      SPRING_DATASOURCE_PASSWORD:
      SPRING_JPA_SHOW_SQL: "true"
    stdin_open: true
    tty: true

volumes:
  db:
